@page "/Classes/{ClassId:guid}"

<PageTitle>Class Details</PageTitle>

@if (_class == null)
{
    <p>Loading...</p>
}
else
{
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3>Class Information</h3>
            <div>
                <button class="btn btn-warning" @onclick="() => NavigateToEditClass(_class.Id)">
                    <i class="oi oi-pencil"></i> Edit
                </button>
                <button class="btn btn-danger" @onclick="DeleteClass">
                    <i class="oi oi-trash"></i> Delete
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">ID</dt>
                        <dd class="col-sm-8">@_class.Id</dd>
                        
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@_class.Name</dd>
                        
                        <dt class="col-sm-4">Instructor</dt>
                        <dd class="col-sm-8">@_class.InstructorName</dd>
                        
                        <dt class="col-sm-4">Category</dt>
                        <dd class="col-sm-8">@_class.Category</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Start Date</dt>
                        <dd class="col-sm-8">@_class.StartDate.ToShortDateString()</dd>
                        
                        <dt class="col-sm-4">End Date</dt>
                        <dd class="col-sm-8">@_class.EndDate.ToShortDateString()</dd>
                        
                        <dt class="col-sm-4">Capacity</dt>
                        <dd class="col-sm-8">@_class.CurrentEnrollment / @_class.MaxCapacity</dd>
                        
                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">@(_class.IsActive ? "Active" : "Inactive")</dd>
                    </dl>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <dt>Description</dt>
                    <dd>@_class.Description</dd>
                </div>
            </div>
        </div>
    </div>
    
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3>Enrolled Students</h3>
            <button class="btn btn-primary" @onclick="() => NavigateToAddStudent(_class.Id)">
                <i class="oi oi-plus"></i> Add Student
            </button>
        </div>
        <div class="card-body">
            @if (!_enrolledStudents.Any())
            {
                <div class="alert alert-info">No students are enrolled in this class.</div>
            }
            else
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in _enrolledStudents)
                        {
                            <tr>
                                <td>@student.FullName</td>
                                <td>@student.Email</td>
                                <td>@student.PhoneNumber</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <button class="btn btn-primary btn-sm" @onclick="() => NavigateToStudentDetails(student.Id)">
                                            <i class="oi oi-eye"></i> View
                                        </button>
                                        <button class="btn btn-danger btn-sm" @onclick="() => RemoveStudentFromClass(student.Id)">
                                            <i class="oi oi-x"></i> Remove
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
}

<div class="mt-3">
    <button class="btn btn-secondary" @onclick="NavigateToClasses">
        <i class="oi oi-arrow-left"></i> Back to Classes
    </button>
</div>