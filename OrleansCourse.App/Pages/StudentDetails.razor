@page "/Students/{StudentId:guid}"

<PageTitle>Student Details</PageTitle>

@if (_student == null)
{
    <p>Loading...</p>
}
else
{
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3>Student Information</h3>
            <div>
                <button class="btn btn-warning" @onclick="() => NavigateToEditStudent(_student.Id)">
                    <i class="oi oi-pencil"></i> Edit
                </button>
                <button class="btn btn-danger" @onclick="DeleteStudent">
                    <i class="oi oi-trash"></i> Delete
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">ID</dt>
                        <dd class="col-sm-8">@_student.Id</dd>
                        
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@_student.FullName</dd>
                        
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@_student.Email</dd>
                        
                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@_student.PhoneNumber</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Date of Birth</dt>
                        <dd class="col-sm-8">@_student.DateOfBirth.ToShortDateString()</dd>
                        
                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">@_student.Address</dd>
                        
                        <dt class="col-sm-4">Enrolled Classes</dt>
                        <dd class="col-sm-8">@_student.EnrolledClassIds.Count</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
    
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3>Enrolled Classes</h3>
            <button class="btn btn-primary" @onclick="() => NavigateToEnrollClass(_student.Id)">
                <i class="oi oi-plus"></i> Enroll in Class
            </button>
        </div>
        <div class="card-body">
            @if (!_enrolledClasses.Any())
            {
                <div class="alert alert-info">This student is not enrolled in any classes.</div>
            }
            else
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Instructor</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var classObj in _enrolledClasses)
                        {
                            <tr>
                                <td>@classObj.Name</td>
                                <td>@classObj.InstructorName</td>
                                <td>@classObj.StartDate.ToShortDateString()</td>
                                <td>@classObj.EndDate.ToShortDateString()</td>
                                <td>
                                    <button class="btn btn-danger btn-sm" @onclick="() => UnenrollFromClass(classObj.Id)">
                                        <i class="oi oi-x"></i> Unenroll
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
}

<div class="mt-3">
    <button class="btn btn-secondary" @onclick="NavigateToStudents">
        <i class="oi oi-arrow-left"></i> Back to Students
    </button>
</div>