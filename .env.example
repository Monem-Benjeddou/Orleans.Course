# Database Configuration
# PostgreSQL connection settings for the application database
DB_HOST=localhost
DB_PORT=5433
DB_NAME=orleans_course
DB_USER=postgres
DB_PASSWORD=your_password_here

# Orleans Cluster Database
# PostgreSQL connection settings for Orleans clustering and grain storage
ORLEANS_DB_HOST=localhost
ORLEANS_DB_PORT=5433
ORLEANS_DB_NAME=orleans_cluster
ORLEANS_DB_USER=postgres
ORLEANS_DB_PASSWORD=your_password_here

# Connection Strings (alternative format - can be used directly in appsettings.json)
# DefaultConnection format: Server={DB_HOST};Port={DB_PORT};Database={DB_NAME};User Id={DB_USER};Password={DB_PASSWORD};
# OrleansCluster format: Server={ORLEANS_DB_HOST};Port={ORLEANS_DB_PORT};Database={ORLEANS_DB_NAME};User Id={ORLEANS_DB_USER};Password={ORLEANS_DB_PASSWORD};

# Application Settings
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://localhost:5000;https://localhost:5001

# Orleans Silo Configuration
ORLEANS_SILO_PORT=11111
ORLEANS_GATEWAY_PORT=30000

# Logging
LOG_LEVEL=Information

# Optional: If using external services
# API_KEY=your_api_key_here
# EXTERNAL_SERVICE_URL=https://api.example.com
